# ================================
# CONFIGURACIÓN BÁSICA DEL SERVIDOR
# ================================
PORT=3000
HOST=localhost
NODE_ENV=development

# URLs importantes
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:3000/api
WEBHOOK_URL=http://localhost:3000/webhook
DOCS_URL=http://localhost:3000/docs

# CORS (separar múltiples orígenes con comas)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ================================
# CONFIGURACIÓN DE SUPABASE
# ================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Pool de conexiones Supabase
SUPABASE_MAX_CONNECTIONS=10
SUPABASE_CONNECTION_TIMEOUT=30000

# ================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
REFRESH_TOKEN_EXPIRATION=7d
BCRYPT_ROUNDS=12

# Configuración de sesiones
SESSION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# ================================
# CONFIGURACIÓN DE WHATSAPP (BAILEYS)
# ================================
MAX_WHATSAPP_SESSIONS=50
WHATSAPP_SESSION_TIMEOUT=1800000
WHATSAPP_RECONNECT_ATTEMPTS=3
WHATSAPP_RECONNECT_DELAY=5000
QR_TIMEOUT=60000
WHATSAPP_CLEANUP_INTERVAL=300000
MAX_MESSAGE_LENGTH=4096

# ================================
# CONFIGURACIÓN DE OPENAI
# ================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30000

# ================================
# CONFIGURACIÓN DE GOOGLE APIS
# ================================
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id-here
GOOGLE_MAX_RESULTS=5
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_CLIENT_EMAIL=your-client-email
GOOGLE_PRIVATE_KEY=your-private-key

# ================================
# CONFIGURACIÓN DE RATE LIMITING
# ================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=false
RATE_LIMIT_SKIP_FAILED=false

# Límites heredados (compatibilidad)
MAX_CHAT_HISTORY=5
RATE_LIMIT_MAX_MESSAGES=30
RATE_LIMIT_COOLDOWN=60000

# ================================
# CONFIGURACIÓN DE LOGGING
# ================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m
LOG_CONSOLE=true

# ================================
# CONFIGURACIÓN DE CACHE
# ================================
CACHE_TTL=300
CACHE_MAX_KEYS=1000
CACHE_CHECK_PERIOD=600

# ================================
# CONFIGURACIÓN DE ARCHIVOS Y STORAGE
# ================================
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain
UPLOAD_PATH=./uploads
CDN_URL=

# ================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ================================
EMAIL_NOTIFICATIONS=false
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@tecnobot.com
WEBHOOK_NOTIFICATIONS=false
WEBHOOK_TIMEOUT=5000
WEBHOOK_RETRIES=3

# ================================
# CONFIGURACIÓN DE ANALYTICS
# ================================
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=60000

# ================================
# CONFIGURACIÓN DE DESARROLLO
# ================================
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_MOCK_DATA=false
DEBUG_MODE=false

# ================================
# CONFIGURACIÓN DE MULTI-TENANCY
# ================================
DEFAULT_PLAN=free
MAX_TENANTS_PER_SERVER=1000
TENANT_ISOLATION_ENABLED=true

# ================================
# CONFIGURACIÓN DE LÍMITES POR PLAN
# ================================
# Plan Gratuito
FREE_MAX_CHATBOTS=1
FREE_MAX_MONTHLY_MESSAGES=1000
FREE_MAX_WHATSAPP_SESSIONS=1
FREE_MAX_TEAM_MEMBERS=1

# Plan Básico
BASIC_MAX_CHATBOTS=3
BASIC_MAX_MONTHLY_MESSAGES=10000
BASIC_MAX_WHATSAPP_SESSIONS=3
BASIC_MAX_TEAM_MEMBERS=3

# Plan Profesional
PRO_MAX_CHATBOTS=10
PRO_MAX_MONTHLY_MESSAGES=50000
PRO_MAX_WHATSAPP_SESSIONS=10
PRO_MAX_TEAM_MEMBERS=10

# Plan Empresarial
ENTERPRISE_MAX_CHATBOTS=-1
ENTERPRISE_MAX_MONTHLY_MESSAGES=-1
ENTERPRISE_MAX_WHATSAPP_SESSIONS=50
ENTERPRISE_MAX_TEAM_MEMBERS=-1

# ================================
# CONFIGURACIÓN DE MEMORIA Y RENDIMIENTO
# ================================
MEMORY_LIMIT=512